/**
 * Prings a backtrace (for debugging purposes)
 *
 */
function labdoo_lib_print_backtrace() {
  $trace=debug_backtrace();
  $index = 0;
  while($trace[$index]) {
    $caller=$trace[$index];
    drupal_set_message("Called by {$caller['function']}");
    $index++;
  }
  return;
}


